---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a href={href} class={`w-max h-max px-2 py-1 flex flex-row items-center gap-2 border-1 rounded bg-zinc-800 border-zinc-500 text-sm cursor-pointer transition hover:bg-zinc-700`} target="_blank">
	<slot name="icon" class="size-4"/>
  <slot name="placeholder"/>
</a>